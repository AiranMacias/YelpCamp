<%- layout('layouts/boilerplate') %>
<h1>All Campgrounds</h1>
<div class="mb-3">
    <a class="btn btn-success" href="campgrounds/new">New Campground</a>
</div>

<% for(let camps of campground ) { %>
<div class="card mb-1">
    <div class="row">
        <div class="col-md-4">
            <img class="img-fluid" src="<%= camps.image %>" alt="" />
        </div>
        <div class="col-md-8">
            <div class="card-body">
                <h5 class="card-title"><%= camps.title %></h5>
                <p class="card-text"><%= camps.description %></p>
                <span class="text-muted"> <%= camps.location %></span>
            </div>
            <div class="card-body">
                <a class="btn btn-primary" href="/campgrounds/<%= camps._id %>">View <%= camps.title %></a>
            </div>
        </div>
    </div>
</div>

<% } %>
